	$("li").removeClass("current-page");
	$("#nav2").addClass("current-page");
</script>

<div class="what-we-do container">
	<div class="row">

	<div>
		<h2><span class="violet" style="position: relative;
left:-5%;"><br/>{{cat}} Providers</span></h2>
