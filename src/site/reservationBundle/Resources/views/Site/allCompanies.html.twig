{% extends '::base.html.twig' %}
{% block title %}companies{% endblock %}
{% block body %}
<script>
	$("li").removeClass("current-page");
	$("#nav2").addClass("current-page");
</script>

<div class="what-we-do container">
	<div class="row">

	<div>
		<h2><span class="violet">Our Service Providers</span></h2>
	</div>
	<div align="right" style="position:relative;left:-30px;">
		<form method="get" action="http://www.google.com">
			<input type="search" placeholder="Search">
		</form>
	</div>
   
</div>
</div>
</div>
<div style="float:left;background-color:#E6E6E6;position: relative;left:20px;width:200px">
    <ul style="list-style: none;font-size:15px;">
        <li><a href="{{ path('sitereservation_eventcat',{'cat':'travel'}) }}">Travel</a></li>
        <li><a href="{{ path('sitereservation_eventcat',{'cat':'shopping'}) }}">Shoping</a></li>
        <li><a href="{{ path('sitereservation_eventcat',{'cat':'tourism'}) }}">Tourism</a></li>
        <li><a href="{{ path('sitereservation_eventcat',{'cat':'resturant'}) }}">Resturants</a></li>
        <li><a href="{{ path('sitereservation_eventcat',{'cat':'hotels'}) }}">Hotels</a></li>
    </ul>
</div>
        <div class="what-we-do container" >
			{% for company in companies %}
			{% if (loop.index-1)%3 == 0 %}
				<div class="row">
				
			{% endif %}
                <div class="service span3">
                    <h4>{{ company.custid.username }}</h4>
					<div style="color:#d52349;font-weight: 700;">Contact Details</div>
					<div style="position:relative;left:50px">
						<table>
						<tr>
						<td align="left"><b>Email</b></td>
						<td align="left">{{ company.custid.email }}</td></tr>
						<tr>
						<td align="left"><b>Website</b></td>
						<td align="left">{{ company.website }}</td></tr>
						<tr>
						<td align="left"><b>Activity</b></td>
						<td align="left">{{ company.category }}</td></tr>
						</table>
					</div>
					<br />
					<a href="{{ path('sitereservation_companyprofile',{"id" : company.id }) }}">Visit the company</a>
					</div>
			{% if loop.index%3 == 0 %}
                </div>
                <br />
            {% endif %}
			{% endfor %}
        
</div>	
</div>     
<br />
{% endblock %}