{% extends '::base.html.twig' %}
{% block title %}companies{% endblock %}
{% block body %}
<script>
	$("li").removeClass("current-page");
	$("#nav3").addClass("current-page");
</script>

<div class="portfolio-title">
		<h3>Our Offers</h3>
	</div>
<br/><br/><br />
<div class="what-we-do container">
<div class="row">
<div class="service span3" style="border:none;background-color: #FFFFFF">
<!----------------accordion-------------------->
{% include 'sitereservationBundle:Site:accordion.html.twig' %}
<!---------------------------------------------->
</div>
<div class="service span3" style="width:72.5%;height:50%;border:none;background-color: #FFFFFF">
<div class="what-we-do container">
<div class="row">
<br /><br />
</div>
		{% for offer in offers %}
		{% if (loop.index-1)%3 == 0 %}
						<br />
	            		<div class="row">
			{% endif %}
                        <div class="service span3">
                        <center><h4>{{ offer.name }}</h4></center>
                        <div style="color:#d52349;font-weight: 700;">Event Details</div>
                        <div style="width:80%">
                        <table>
				<tr>
				<td align="left"><b>Place</b></td>
                                <td align="left">{{ offer.place }}</td>
                                </tr>
                                <tr>
				<td align="left"><b>Availability</b></td>
                                <td align="left">{{ offer.available }}</td>
                                </tr>
                                <tr>
				<td align="left"><b>Activity</b></td>
                                <td align="left">{{ offer.category }}</td>
                                </tr>
                        </table>
                        </div>
			<br />
			<a href="{{ path('sitereservation_EventProfileinfo',{'id' : offer.id }) }}">More informaion</a>
			</div>
			{% if loop.index%3 == 0 %}
			</div>
            {% endif %}
			{% endfor %}
</div>
</div>              
</div>
</div>              
 <div class="pagination pagination-centered">
            {% if lastPageno > 1 %}
                <ul>
                    {% if page > 1 %}
                    <li><a href="{{ url('sitereservation_userAllOffers') }}">First</a></li>
                    <li><a href="{{ url('sitereservation_userAllOffers', {'page': page - 1}) }}">Prev</a></li>
                    {% endif %}

        {% for numberOfPage in 1..lastPageno %}
        {% if numberOfPage > page - 3 and numberOfPage < page + 3 %}
            {% if page == numberOfPage %}<li class="active"><a href="#">{{ numberOfPage }}</a></li>{% else %}<li><a href="{{ url('sitereservation_userAllOffers', {'page': numberOfPage}) }}">{{ numberOfPage }}</a></li>{%endif%}
        {% endif %}
        {% endfor %}


                    {% if page < lastPageno %}
                <li><a href="{{ url('sitereservation_userAllOffers', {'page': page + 1}) }}">Next</a></li>
                <li><a href="{{ url('sitereservation_userAllOffers', {'page': lastPageno}) }}">Last</a></li>                    
{% endif %}
                </ul>
                {% endif %}
        </div>
                    </div>

{% endblock %}
			
                                           
